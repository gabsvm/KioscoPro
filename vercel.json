{
  "version": 2,
  "builds": [
    {
      "src": "pages/api/generate-invoice.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["../../certificate.pem", "../../private_key.pem"]
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/generate-invoice",
      "destination": "/pages/api/generate-invoice.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
