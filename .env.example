# Variables de entorno para la integración con AFIP

# El CUIT del contribuyente
AFIP_CUIT=

# El contenido del certificado digital (archivo .crt)
AFIP_CERT=

# El contenido de la clave privada (archivo .key)
AFIP_PRIVATE_KEY=

# Entorno de AFIP: 'testing' para pruebas, 'production' para facturas reales
AFIP_ENVIRONMENT=testing

# Credenciales de Firebase Admin SDK (para el backend)
# Puedes obtenerlas desde la configuración de tu proyecto de Firebase > Cuentas de servicio
# Generalmente es un archivo JSON. Debes copiar el contenido completo aquí.
FIREBASE_SERVICE_ACCOUNT_KEY=
